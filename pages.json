{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@/uni_modules/uni-$1/components/uni-$1/uni-$1.vue"
    }
  },
  "preloadRule": {
    "pages/index/index": {
      "network": "all",
      "packages": ["__APP__"]
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": false,
        "navigationStyle": "default"
      }
    },
    {
      "path": "pages/menu/menu",
      "style": {
        "navigationBarTitleText": "点餐",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "购物车",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/order/list",
      "style": {
        "navigationBarTitleText": "我的订单",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "订单",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/order/confirm",
      "style": {
        "navigationBarTitleText": "订单确认",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/payment/index",
      "style": {
        "navigationBarTitleText": "收银台",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/payment/result",
      "style": {
        "navigationBarTitleText": "支付结果",
        "enablePullDownRefresh": false
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/order",
      "pages": [
        {
          "path": "detail",
          "style": {
            "navigationBarTitleText": "订单详情"
          }
        }
      ]
    },
    {
      "root": "pages/address",
      "pages": [
        {
          "path": "list",
          "style": {
            "navigationBarTitleText": "收货地址"
          }
        },
        {
          "path": "edit",
          "style": {
            "navigationBarTitleText": "编辑地址"
          }
        }
      ]
    },
    {
      "root": "pages/settings",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": "设置"
          }
        },
        {
          "path": "profile",
          "style": {
            "navigationBarTitleText": "个人资料"
          }
        },
        {
          "path": "phone",
          "style": {
            "navigationBarTitleText": "修改手机号"
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "淄博烧烤",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#ff6b81",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/images/tab-bar/home.png",
        "selectedIconPath": "static/images/tab-bar/home-active.png"
      },
      {
        "pagePath": "pages/menu/menu",
        "text": "点餐",
        "iconPath": "static/images/tab-bar/menu.png",
        "selectedIconPath": "static/images/tab-bar/menu-active.png"
      },
      {
        "pagePath": "pages/order/index",
        "text": "订单",
        "iconPath": "static/images/tab-bar/order.png",
        "selectedIconPath": "static/images/tab-bar/order-active.png"
      },
      {
        "pagePath": "pages/mine/mine",
        "text": "我的",
        "iconPath": "static/images/tab-bar/mine.png",
        "selectedIconPath": "static/images/tab-bar/mine-active.png"
      }
    ]
  }
} 